# Required for the tracker
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_GROUP_USERNAME=your_group_username

# Optional: use a StringSession instead of a local .session file
TG_STRING_SESSION=your_string_session

# Optional: post via bot (otherwise posts are sent by the user session)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_BOT_TARGET=@your_group_or_user
TELEGRAM_GROUP_ID=-1001234567890

# Optional: leaderboard web export
LEADERBOARD_WEB_EXPORT_ENABLED=false
LEADERBOARD_INGEST_URL=https://example.com/api/leaderboard/ingest
LEADERBOARD_INGEST_SECRET=your_shared_secret
LEADERBOARD_EXPORT_TIMEOUT_MS=1500

# Optional: Next.js admin state endpoint
CRON_SECRET=your_cron_secret
